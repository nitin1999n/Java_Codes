		 Scanner  sc = new Scanner(System.in);
         int n = sc.nextInt();
         int row=1;
         int nst =1;
         int nsp =2*n-1;
         while(row<=(2*n+1))
         {
             int cst1=1;
            int num=5;
             while(cst1<=nst)
             {
                 if(cst1==6)
                 {}else
                 System.out.print(num+"  ");
                 cst1++;
                 num--;
             }
             int csp=1;
             while(csp<=nsp)
             {
                 System.out.print("  ");
                 csp++;
             }
             int cst2=1;
             while(cst2<=nst)
             {
                 System.out.print((num+1)+"  ");
                 cst2++;
                 num++;
             }
             System.out.println();
             if(row<=n)
             {
             nst++;
             nsp-=2;}
             else
             {
              nst--;
              nsp+=2;
             }
             row++;
         }
		}  
		 
